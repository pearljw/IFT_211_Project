def convert_octal(octal_num):
    try:
        decimal_num = int(octal_num, 8)
        binary_num = bin(decimal_num)[2:]
        hexadecimal_num = hex(decimal_num)[2:].upper()

        print(f"Octal: {octal_num}")
        print(f"Decimal: {decimal_num}")
        print(f"Binary: {binary_num}")
        print(f"Hexadecimal: {hexadecimal_num}")
    except ValueError:
        print("Invalid octal number. Please provide a valid octal input.")

if __name__ == "__main__"
        octal_input = input("Enter an octal number: ")
        convert_octal(octal_input)
